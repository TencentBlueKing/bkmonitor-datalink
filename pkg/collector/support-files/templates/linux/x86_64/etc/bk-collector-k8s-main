    seccomp.enabled: false

    path.pid: /data/pid
    path.logs: /data/logs
    path.data: /data/data

    queue:
      mem:
        events: 128
        flush.min_events: 0
        flush.timeout: "1s"

    xpack:
      monitoring:
        enabled: false

    resource_limit:
      enabled: false

    bk-collector:
      host_id_path: /data/hostid/hostid
      apm:
        patterns:
          - "/data/collector/apm_configs/*.conf"

      logging:
        stdout: true
        format: "console"
        level: info

      bk_metrics_pusher:
        disabled: true

      proxy:
        disabled: false
        http:
          host: ""
          port: 10205
          retry_listen: true
          middlewares:
            - "logging"
            - "maxconns;maxConnectionsRatio=256"

      cache:
        - name: "k8s_cache"
          config:
            url: http://{{ .Release.Name }}-operator:8080/pods
            interval: 5s
            timeout: 5s

      pingserver:
        disabled: true

      receiver:
        http_server:
          enabled: true
          endpoint: ":4318"
          middlewares:
            - "logging"
            - "cors"
            - "content_decompressor"
            - "maxconns;maxConnectionsRatio=256"
            - "maxbytes;maxRequestBytes=209715200"

        admin_server:
          enabled: true
          endpoint: ":4310"
          middlewares:
